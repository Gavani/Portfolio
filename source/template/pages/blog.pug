extends ../main-layout

block variables
  -
    var title = "Blog page";
    var page  = "Blog"

block content
    include ../parts/hero
    +hero('blog')
    main(role="main").page-main
      section.blog
        .svg__block
          svg(
            viewbox="0 0 1000 150" 
            preserveAspectRatio="none"
            class="triangle triangle_fill_white-blog works__triangles works__triangles-left")
            polygon(points="0,0 0,150 1000,150")
          svg(
            viewbox="0 0 1000 150" 
            preserveAspectRatio="none"
            class="triangle triangle_fill_white-blog works__triangles works__triangles-right")
            polygon(points="0,150 1000,150 1000,0")
        .container
          .blog__left
            aside.blog__aside
              ul.aside__list
                each item, ndx in ['Самое важное в SASS', 'Приёмы в вёрстке, без которых не обходится ни один сайт', 'Самый необходимый набор Gulp плагинов', 'Почему я выбрал Jade']
                  if ndx == 0
                    li.aside__list-item.aside__list-item_active
                      a(href="#").aside__list-link= item
                  else
                    li.aside__list-item
                      a(href="#").aside__list-link= item  
          .blog__right
            article.blog__article
              .blog__article-header
                h2.blog__article-header-text Самое важное в SASS
              .blog__article-date
                p 22 ноября 2016

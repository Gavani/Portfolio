.hero__bg
  img(src="/assets/img/backgrounds/mountains.jpg", alt="background").hero__bg-img
header.hero__header
  ul.socials
    each item in ['vk', 'github', 'in']
      li.socials__item
        a(href="" class=`socials__link`)
          svg(class=`socials__svg socials__svg_${item}`)
            use(xlink:href=`/assets/img/icons/symbol/sprite.svg#${item}`)
  a(href="").hamburger
    svg.hamburger__svg
      use(xlink:href=`/assets/img/icons/symbol/sprite.svg#hamburger`)
.hero__title
  +section__title('section__title-about section__title-about_dims', 'portfolio_header')
  .user.hero__user-block
    .user__photo
      .user__photo-avatar
        img(src="/assets/img/contents/user-lit.jpg" alt="").user__photo-img
    .user__name 
      p Ion Talmaci
    .user__desc 
      p Личный сайт веб разработчика
a(href="#").arrow__down
  svg.arrow__down-svg
    use(xlink:href='/assets/img/icons/symbol/sprite.svg#arrow_down')